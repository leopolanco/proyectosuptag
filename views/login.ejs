<head>
	<title>Login</title>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<link rel="stylesheet" type="text/css" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" type="text/css" href="/css/util.css">
	<link rel="stylesheet" type="text/css" href="/css/main.css">

</head>

<body style="background-color: #666666;">
	
	<div class="limiter">
		<div class="container-login">
			<h4><%= error %></h4>
			<h4><%= success %></h4>
			<div class="wrap-login">
				
				<form class="login-form validate-form" method="POST" action='/login'>
					
					<span class="login-form-title p-b-43">
						
						Ingrese para continuar
					</span>
					
					
					<div class="wrap-input validate-input" data-validate = "Ingrese su usuario">
						<input class="input" type="text" name="username" >
						<span class="focus-input"></span>
						<span class="label-input">Usuario</span>
					</div>
					
					
					<div class="wrap-input validate-input" data-validate="Ingrese su contraseña">
						<input class="input" type="password" name="password" >
						<span class="focus-input"></span>
						<span class="label-input">Contraseña</span>
					</div>

					<div class="flex-sb-m w-full p-t-3 p-b-32">		
					</div>
			
					<div class="container-login-form-btn-warning">
						<button class="login-form-btn">
							Ingresar
						</button>
					</div>
					
				
					    <a class="mt-5" href="/registro">
							Registrarse
						</a>
					
				</form>

			<div class="login-more">
			    <div class="container">
			    <img src="/images/bg-01.png" width="650" height="725">
         </div>
		</div>
		</div>
	</div>

	<script src="/js/jquery-3.2.1.min.js"></script>
    <script src="/js/main.js"></script>

</body>

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet"  type="text/css" href="/css/bootstrap.min.css">



<style type="text/css">

.busqueda{
  width: 0px;
  height: 50px;
  text-align: center;
  padding-right: 50px;
  transition: all 0.5s ease;
  border-radius: 5px;
  position: relative;
}

.input-busqueda, .select-busqueda{
  border: 0px;
  background: transparent;
  width: 0%;
  padding: 5px 0;
  outline: none;
  color: #fff;
  font-weight: bold;
  transition: all 0.3s ease;
}

.busqueda .fa{
  color: #ffffff;
  position: absolute;
  right: 15px;
  top: 15px;
  font-size: 22px;
  cursor: pointer;
}

.busqueda.active{
  width: 500px;
  padding-left: 5px;
  transition: all 0.5s ease;
}

.input-busqueda.active {
  width: 60%;
}
.select-busqueda.active{
  width: 20%;
}



</style>

<form action="/index" method="GET">
  <div class="busqueda bg-dark">
    <input type="text" class="input-busqueda border-bottom" placeholder="Buscar" name="search">
                <select class="select-busqueda border-bottom">
               <option value="T1">General</option>
               <option value="T2">PNF</option>
               <option value="T3">Comunidad</option>
               <option value="T4">Profesor</option>
            </select>
    <i class="fa fa-search" aria-hidden="true"></i>
  </div>
  
</form>


<script src="/datatables/js/jquery-3.3.1.js"></script>


<script>
$(document).ready(function(){
  
  $(".fa-search").click(function(){
    $(".busqueda, .input-busqueda, .select-busqueda").toggleClass("active");
  });
  
});</script>